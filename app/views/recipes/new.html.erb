<div class="container-main">
  <h1>Create Recipe</h1>
  <div class="recipe-form-container">
    <%= form_with model: recipe, url: recipes_path, method: :post, local: true, scope: :recipe do |f|%>
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true, class:"recipe-input" %>
      </div>

      <div>
        <%= f.label :description %><br>
        <%= f.text_area :description, required: true, class:"recipe-description" %>
      </div>

      <div>
        <%= f.label :preparation_time %><br>
        <%= f.number_field :preparation_time, value:0, min: 0, step: 0.1, class:"number-input" %>
      </div>

      <div>
        <%= f.label :cooking_time %><br>
        <%= f.number_field :cooking_time, value:0, min: 0, step: 0.1, class:"number-input" %>
      </div>

      <div>
        <%= f.label :make_public %><br>
        <%= f.check_box :public %>
      </div>

      <%= f.submit "Add Recipe", class:"btn-general btn-submit" %>
    <% end %>
  </div>

  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
</div>